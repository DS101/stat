<h1> <%= @game.title %> </h1>
<div class="row">
  <div class="col-md-6">
    <h4> <%= Team.find(@game.home_team_id).title %> </h4>
    <table class="table table-bordered">
      <thead>
        <tr>
         <td>Игрок</td>
         <td>Гол</td>
         <td>голевая передача</td>
         <td>Процент передач</td>
         <td>Время на поле</td>
         <td>удары(в створ)</td>
        </tr>
      </thead>
      <tbody>
        <% @home_team_players.each do |player| %>
          <% player_statistic = player.statistics.find_by(game_id: @game.id) %>
          <tr>
            <td> <%= player.name %> </td>
            <td> <%= player_statistic.goal %> </td>
            <td> <%= player_statistic.assist %> </td>
            <td> <%= "#{player_statistic.pass} %" %> </td>
            <td> <%= player_statistic.game_time %> </td>
            <td> <%= "#{player_statistic.shot}(#{player_statistic.on_target})" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h4> <%= Team.find(@game.away_team_id).title %> </h4>
    <table class="table table-bordered">
      <thead>
        <tr>
         <td>Игрок</td>
         <td>Гол</td>
         <td>голевая передача</td>
         <td>Процент передач</td>
         <td>Время на поле</td>
         <td>удары(в створ)</td>
        </tr>
      </thead>
      <tbody>
        <% @away_team_players.each do |player| %>
          <% player_statistic = player.statistics.find_by(game_id: @game.id) %>
          <tr>
            <td> <%= player.name %> </td>
            <td> <%= player_statistic.goal %> </td>
            <td> <%= player_statistic.assist %> </td>
            <td> <%= "#{player_statistic.pass} %" %> </td>
            <td> <%= player_statistic.game_time %> </td>
            <td> <%= "#{player_statistic.shot}(#{player_statistic.on_target})" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <table class="table table-striped">
      <% @game.events.each do |event| %>
        <tr>
          <td> <%= event.time %> " </td>
          <td> <img src=<%= event.logo %> width="20" height="20" alt="lorem"> </td>
          <td> <%= event.score %> </td>
          <td> <%= event.description %> </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-10"></div>
</div>

